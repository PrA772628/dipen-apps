<odoo>

    <record model="ir.module.category" id="module_category_mrp_costing">
            <field name="name">MRP Costing Access</field>
            <field name="description">Helps you to manage Cost</field>
            <field name="sequence">10</field>
    </record>

    <record id="group_costing_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="mrp_costing.module_category_mrp_costing"/>
    </record>

    <record id="group_costing_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="mrp_costing.module_category_mrp_costing"/>
        <field name="implied_ids" eval="[(4, ref('group_costing_user'))]"/>
    </record>

</odoo>