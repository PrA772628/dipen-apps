<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherir" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group//group//field[@name='partner_id']" position='after'>
                    <field name='manufacture_id' invisible='True'/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_inherir" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group//group//field[@name='date_order']" position='after'>
                    <field name='manufacture_id' invisible='True'/>
                </xpath>
                <xpath expr="//sheet//div[@name='button_box']" position='inside'>
                    <button string="Manufacturing Order" type="object"
                        name= "action_subcontract_manufacture"
                        attrs="{'invisible':[('manufacture_id', '=', False)]}"
                        class="oe_stat_button" icon="fa-list-alt"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>