<odoo>

    <record model="ir.module.category" id="module_category_Loans">
        <field name="name">Loans</field>
        <field name="description">Helps you to manage The Loans</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_Loans_Hr_Manager" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="category_id" ref="loans.module_category_Loans"/>
    </record>

    <record id="group_Loans_Dep_Manager" model="res.groups">
        <field name="name">Dep Manager</field>
        <field name="category_id" ref="loans.module_category_Loans"/>
    </record>

    <record id="group_Loans_Employee" model="res.groups">
        <field name="name">Employees</field>
        <field name="category_id" ref="loans.module_category_Loans"/>
    </record>

    <record id="group_Loans_Accountant" model="res.groups">
        <field name="name">Accountant</field>
        <field name="category_id" ref="loans.module_category_Loans"/>
    </record>

    <record model ="ir.rule" id="see_only_own_request">
        <field name="name">See His Requests Only</field>
        <field name="model_id" ref="model_loan_request"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_Loans_Employee'))]"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

</odoo>